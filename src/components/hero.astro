---
import { Picture } from "astro:assets";
import heroImage from "@/assets/Konex-Hero.jpg";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Travel Assistant for Client Satisfaction
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      ✈️ Turn Visitors Into Bookings With an AI Travel Assistant.<wbr /> Give your website a multilingual AI chatbot that answers traveller questions, recommends trips, and captures new leads — 24/7, automatically.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://konex.click/contact"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-envelope" />

        Contact for Details
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://konex.click/demo"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="carbon:demo" />
        Try the Live Demo
      </Link>
    </div>
  </div>
</main>
